# /root/.bashrc

# Alias
export LS_OPTIONS='--color=auto'
eval "$(dircolors)"
alias ls='ls $LS_OPTIONS'
alias ll='ls $LS_OPTIONS -l'
alias l='ls $LS_OPTIONS -lA'
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ..='cd ..'
alias ...='cd ../..'
alias vi='vim'

# PS1
ROUGE='\[\033[0;33m\]'
BLANC='\[\033[1;37m\]'
GRIS='\[\033[0m\]'
PS1="$ROUGE[$BLANC\u$GRIS@$BLANC\h$GRIS:$BLANC\W$ROUGE] #$GRIS "

# Vim 
EDITOR=vim
VISUAL=$EDITOR
export EDITOR VISUAL
